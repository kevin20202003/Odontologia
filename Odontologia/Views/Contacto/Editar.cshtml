@model Odontologia.Models.Entidades.Contacto
@{
    ViewData["Title"] = "Editar";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Odontologia.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/font-awesome/css/all.min.css" />
<div class=" col-md-12">

    <div class=" card">

        <div class=" card-header text-center">

            <h5> Editar Contacto</h5>

        </div>

        <div class=" card-body text-center">

            <form asp-action="Editar">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="id_contacto" />

                <div class="form-group">

                    <label></label>

                    <input asp-for="nombre" class="form-control" placeholder=" Nombre" />

                    <span asp-validation-for="nombre" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label></label>

                    <input asp-for="email" class="form-control" placeholder=" Correo electronico" />

                    <span asp-validation-for="email" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label></label>

                    <input asp-for="telefono" class="form-control" placeholder="Telefono" />

                    <span asp-validation-for="telefono" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label></label>

                    <input asp-for="mensaje" class="form-control" placeholder="Mensaje" />

                    <span asp-validation-for="mensaje" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label></label>

                    <input asp-for="fecha" class="form-control" placeholder="Fecha" />

                    <span asp-validation-for="fecha" class="text-danger"></span>

                </div>

                <div class=" card-footer ">

                    <div class="form-group">

                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>

                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>

                    </div>

                </div>

            </form>

        </div>

    </div>

</div>










